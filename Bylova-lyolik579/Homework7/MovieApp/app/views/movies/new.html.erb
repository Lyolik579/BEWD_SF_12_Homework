<h1>Add a new movie</h1>

<%= form_for @movie do |f| %>

	<%= f.label :title %>:
	<%= f.text_field :title %><br />
	
	<%= f.label :description %>:
	<%= f.text_field :description %><br />

	<%= f.label :year_released %>:
	<%= f.text_field :year_released %><br />

	<%= f.label :rating %>:
	<%= f.text_field :rating %><br />


	<%= f.submit %>
<% end %>
